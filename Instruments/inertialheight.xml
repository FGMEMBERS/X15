    <path>Aircraft/c172/Instruments/Textures/misc-1.rgb</path>
    <x1>0.8</x1>
    <y1>0.78125</y1>
    <x2>0.8375</x2>
    <y2>1.0</y2>
   </texture>
   <w>8</w>
   <h>35</h>
   <transformations>
    <t1>
     <type>rotation</type>
     <property>/position/altitude</property>
     <max>100000.0</max>
     <scale>0.036</scale>
    </t1>
    <t2>
     <type>y-shift</type>
     <offset>17.5</offset>
    </t2>
   </transformations>
  </l3>
  <l4>
   <name>hundreds needle</name>
   <texture>
    <path>Aircraft/c172/Instruments/Textures/misc-1.rgb</path>
